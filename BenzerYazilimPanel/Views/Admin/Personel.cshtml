                                <div class="form-group">
                                    <label class="control-label">Yetki</label>
                                    <select id="selectYetki" class="form-control">
                                        <option value="0">Bayi</option>
                                        <option value="1">Admin</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Üyelik Aktif Mi?</label>
                                    <select id="selectAktif" class="form-control">
                                        <option value="1">Aktif</option>
                                        <option value="0">Pasif</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">İskonto Oranı</label>
                                    <input type="text" class="form-control" id="inputIskonto" value="0" name="inputIskonto">
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Açıklama</label>
                                    <textarea class="form-control" id="inputDescription"  name="inputDescription" rows="3"></textarea>
                                </div>
                                <div class="clearfix"></div>
                                <input type="hidden" id="hiddenUserID" name="hiddenUserID" value="0" />
                            
                            <div class="clearfix"></div>
                            <div class="form-actions">
                                <button type="button" id="UrunTemizle" class="btn default">Temizle</button>
                                <button type="button" id="UrunKaydet" class="btn green">Kaydet</button>
                                @*<button type="button" id="UrunSil" class="btn red">Sil</button>*@
                            </div>
</div>
                            <div class="clearfix"></div>
                        </div>
<div class="clearfix"></div>
                    </div>
<div class="clearfix"></div>
                </div>





            </div>
            </div>
        </div>
        <!-- End: life time stats -->
    </div>


