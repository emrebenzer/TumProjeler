@{

    var Title = ViewBag.Title;
    Layout = "~/Views/AdminShared/Master.cshtml";
}


<script src="~/Content/plugins/select2/select2.min.js"></script>
<link href="~/Content/plugins/select2/select2.css" rel="stylesheet" />
<script src="~/Scripts/jquery.printElement.min.js"></script>
<style>
    .productbox {
        background-color: #ffffff;
        padding: 10px;
        margin-bottom: 10px;
        -webkit-box-shadow: 0 8px 6px -6px #999;
        -moz-box-shadow: 0 8px 6px -6px #999;
        box-shadow: 0 8px 6px -6px #999;
    }

    .producttitle {
        font-weight: bold;
        padding: 5px 0 5px 0;
    }

    .productprice {
        border-top: 1px solid #dadada;
        padding-top: 5px;
    }

    .pricetext {
        font-weight: bold;
        font-size: 1.4em;
    }
</style>
<script type="text/javascript">

    $(document).ready(function () {
        SahisDoldur();
        //BilgileriDoldur(-1);

        $("#drpBayiler").change(function () {
            KisiBilgisiBas($("#drpBayiler").val());
        });

        $("#UrunTemizle").click(function () { YeniUserEkle(); });

        $("#UrunSil").click(function () {

            var ID = $("#hiddenUserID").val();
            if (ID == "0" || ID == null) {
                return;
            }


            var r = confirm("Şahısı silerseniz bir daha geri gelmez. Silmek istediğinizden emin misiniz?");
            if (r == true) {
                $.ajax({
                    type: "POST",
                    url: '@(Url.Action("SahisSil", "Admin"))',
                    async: false,
                    data: JSON.stringify({ id: ID }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        if (data == true) {
                            alert("Silme işlemi başarılı...");
                            SahisDoldur();
                            YeniUserEkle();
                        }
                        else {
                            alert("Silme işlemi başarısız...Lütfen tekrar deneyiniz.");
                        }
                    },
                    error: function (ddd) {
                        alert("Silme işlemi başarısız...Lütfen tekrar deneyiniz.");
                    }
                });
            }
            else {

            }


        });

        $('#btnGosterGizle').click(function () {
            $('#txt_kullanici_sifre').attr('type', 'password');
            if ($('#inputPassword').hasClass('Gizli')) {
                $('#inputPassword').attr('type', 'text');
                $('#inputPassword').removeClass('Gizli');
            }
            else {
                $('#inputPassword').attr('type', 'password');
                $('#inputPassword').addClass('Gizli');
            }
        });



        $("#UrunKaydet").click(function () {
            var inputName = $("#inputUserName").val();
            var inputPassword = $("#inputPassword").val();

            var inputIskonto = $("#inputIskonto").val();
            var inputDescription = $("#inputDescription").val();
            var inputYetki = $("#selectYetki").val();
            var inputAktif = $("#selectAktif").val();
            var hiddenUserID = $("#hiddenUserID").val();

            if (inputName == "") {
                alert("Lütfen kullanıcı adı giriniz");
                return;
            }
            else if (inputPassword == "") {
                alert("Lütfen şifre giriniz");
                return;
            }
            else if (inputIskonto == "") {
                alert("Lütfen stok miktarını giriniz.");
                return;
            }

            $.ajax({
                url: '@Url.Action("SAHIS_EKLE","Admin")', //your server side script, //our data
                type: 'POST',
                async: false,
                data: JSON.stringify({ inputName: inputName, inputDescription: inputDescription, inputPassword: inputPassword, inputIskonto: inputIskonto, inputYetki: inputYetki, inputAktif: inputAktif, hiddenUserID: hiddenUserID }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data == true) {
                        alert("Kayıt işlemi başarılı...");
                        SahisDoldur();
                        YeniUserEkle();
                    }
                    else {
                        alert("Kayıt işlemi başarısız...Lütfen tekrar deneyiniz.");
                    }
                }
            });
        });


    });

    function YeniUserEkle() {
        $("#hiddenUserID").val(0);
        $("#inputPassword").val("");
        $("#selectYetki").val("0");
        $("#selectAktif").val("1");
        $("#inputIskonto").val("0");
        $("#inputDescription").val("");
        $("#UrunKaydet").html("Kaydet");
    }

    function SahisDoldur() {
        $.ajax({
            url: '@Url.Action("GetSahislarHepsi", "Admin")', //your server side script, //our data
            type: 'POST',
            async: false,
            success: function (data) {

                $("#drpBayiler").empty();
                $("#drpBayiler").append('<option value="0">Seçiniz.</option>');
                $.each(data, function (index, item) {
                    $("#drpBayiler").append('<option value="' + item.ID + '">' + item.Text + '</option>');
                });
                $("#drpBayiler").select2();

            },
            error: function () {

            }
        });
    }

    function KisiBilgisiBas(id)
    {
        $.ajax({
            url: '@Url.Action("SAHIS_BILGISI","Admin")', //your server side script, //our data
            type: 'POST',
            async: false,
            data: JSON.stringify({ ID: id }),
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
               
                    
                    $("#inputUserName").val(data.UserName);
                    $("#inputPassword").val(data.Password);

                    $("#inputIskonto").val(data.Iskonto);
                    $("#inputDescription").val(data.Description);
                    $("#selectYetki").val((data.Admin=="True" || data.Admin=="true" || data.Admin==true) ? 1 : 0);
                    $("#selectAktif").val((data.Active == "True" || data.Active == "true" || data.Active == true) ? 1 : 0);
                    $("#hiddenUserID").val(data.ID);     
                
            }
        });


    }


</script>

