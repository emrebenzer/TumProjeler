                                    <input type="password" class="form-control Gizli" id="inputPassword" name="inputPassword" autocomplete="off">
                                </div>

                                <div class="form-group">
                                    <label class="control-label">SMTP Server</label>
                                    <input type="text" class="form-control" id="inputServer" name="inputServer" autocomplete="off">
