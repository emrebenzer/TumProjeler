
@{
    ViewBag.Title = "SmtpSettings";
    Layout = "~/Views/AdminShared/Master.cshtml";
}
<script>
    $(document).ready(function () {

        BilgileriBas();

        $("#smtpDuzenle").click(function () {
            var inputUserName = $("#inputUserName").val();
            var inputPassword = $("#inputPassword").val();
            var inputServer = $("#inputServer").val();
            var inputPort = $("#inputPort").val();

            if (inputUserName == "") {
                alert("Lütfen kullanıcı adı giriniz");
                return;
            }
            else if (inputPassword == "") {
                alert("Lütfen password giriniz");
                return;
            }
            else if (inputServer == "") {
                alert("Lütfen server adresi giriniz.");
                return;
            }
            else if (inputPort == "") {
                alert("Lütfen port giriniz.");
                return;
            }


            $.ajax({
                url: '@Url.Action("SMTP_GUNCELLE","Admin")', //your server side script, //our data
                type: 'POST',
                async: false,
                data: JSON.stringify({ inputUserName: inputUserName, inputPassword: inputPassword, inputServer: inputServer, inputPort: inputPort }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data == true) {
                        alert("Güncelle işlemi başarılı...");
                        BilgileriBas();
                    }
                    else {
                        alert("Kayıt işlemi başarısız...Lütfen tekrar deneyiniz.");
                    }
                }
            });




        });


        $('#btnGosterGizle').click(function () {
            $('#txt_kullanici_sifre').attr('type', 'password');
            if ($('#inputPassword').hasClass('Gizli')) {
                $('#inputPassword').attr('type', 'text');
                $('#inputPassword').removeClass('Gizli');
            }
            else {
                $('#inputPassword').attr('type', 'password');
                $('#inputPassword').addClass('Gizli');
            }
        });


    });


    function BilgileriBas() {
        $.ajax({
            url: '@Url.Action("SMTP_BILGISI","Admin")', //your server side script, //our data
            type: 'POST',
            async: false,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $("#inputUserName").val(data.SMTPUser);
                $("#inputPassword").val(data.SMTPPassword);

                $("#inputServer").val(data.SMTPServer);
                $("#inputPort").val(data.SMTPPort);
            }
        });


    }


</script>


