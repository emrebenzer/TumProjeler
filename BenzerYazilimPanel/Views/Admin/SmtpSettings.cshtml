            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">SMTP Bilgileri </span>
                </div>
                <div class="actions">
                </div>
            </div>
            <div class="portlet-body">


                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <div class="portlet box blue ">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gift"></i>SMTP Bilgileri Düzenleme
                                </div>
                                <div class="actions">

                                </div>
                            </div>
                            <div class="portlet-body">

                                <div class="form-group">
                                    <label class="control-label">SMTP Kullanıcı Adı</label>
                                    <input type="text" class="form-control" id="inputUserName" name="inputUserName" autocomplete="off">
                                </div>
                                <div class="form-group">
